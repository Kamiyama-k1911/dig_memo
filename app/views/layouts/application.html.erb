<!DOCTYPE html>
<html>
  <head>
    <title>DigMemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render partial: "shared/header" %>

    <% if flash[:notice] %>
      <p class="alert alert-success mb-0"><%= flash[:notice] %></p>
    <% elsif flash[:alert] %>
      <p class="alert alert-danger mb-0"><%= flash[:alert] %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
