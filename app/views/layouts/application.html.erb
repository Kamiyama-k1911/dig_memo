<!DOCTYPE html>
<html>
  <head>
    <title>DigMemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <p class="alert alert-success mb-0"><%= flash[:notice] %></p>
    <% elsif flash[:alert] %>
      <p class="alert alert-danger mb-0"><%= flash[:alert] %></p>
    <% end %>

    <% if user_signed_in? %>
      <div class="container mb" style="max-width: 90%">
        <div class="flex">
          <%= render partial: "shared/side-header"%>
          <%= yield %>
        </div>
      </div>
    <% else %>
      <%= yield %>
    <% end %>

  </body>
</html>
