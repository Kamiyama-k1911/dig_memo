<!DOCTYPE html>
<html>
  <head>
    <title>DigMemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+1p:wght@300&family=Pangolin&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render partial: "shared/flash", locals: { id: "flash" } %>
        <div class="container mb">
          <div class="flex">
            <%= render partial: "shared/side-header", locals: { categories: @categories}%>
            <div class="main">
              <%= yield %>
            </div>
          </div>
        </div>
    <% else %>
      <%= render partial: "shared/flash", locals: { id: "no-sign-in" } %>
      </div>
      <%= yield %>
    <% end %>

  </body>
</html>
