<div id=<%= id %>>
  <% if flash[:notice] %>
  <p class="alert alert-success mb-0"><%= flash[:notice] %><button type="button" class="close" data-dismiss="alert">&times;</button></p>
  <% elsif flash[:alert] %>
  <p class="alert alert-danger mb-0"><%= flash[:alert] %><button type="button" class="close" data-dismiss="alert">&times;</button></p>
  <% end %>
</div>