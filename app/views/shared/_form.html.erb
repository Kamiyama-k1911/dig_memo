<%= form_with model: article, local: true do |f| %>
  <div class="form-group mb" style="max-width: 30%">
    <%= f.label :category_id, "カテゴリー" %><br>
    <%= f.collection_select :category_id,Category.all,:id, :name ,{ include_blank: "選択して下さい" }, autofocus: true, autocomplete: "name",class: "custom-select form-control" %>
  </div>

  <div class="form-group mb">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "title",class: "form-control" %>
  </div>
  
  <button id="item-form__plus" type="button" class="btn btn-success mt-4">問い+</button>
  <button id="item-form__minus" type="button" class="btn btn-danger mt-4">問い-</button>
  <div id="item-form">
    <div class="form-group mb">
      <li class="item-form__list" style="width: 100%">
        <%= f.label :question, "問い1", class:"mt-3" %>
        <%= f.select :question, ArticleItem.questions_i18n.invert, { include_blank: "選択して下さい" },{ name: "items[item1][]", class: "form-control custom-select" } %>

        <%= f.label :body, "内容1" %>
        <%= f.text_area :body,name: "items[item1][]", autofocus: true, autocomplete: "body",class: "form-control" %>
      </li>
    </div>
  </div>

  <div class="button text-left">
    <%= f.submit submit, class: "btn btn-primary",id: "form" %>
  </div>
<% end %>
