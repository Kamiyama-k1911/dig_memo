<%= form_with model: article, remote: true do |f| %>
  <div class="form-group mb" style="max-width: 30%">
    <%= f.label :category_id, "カテゴリー" %><br>
    <%= f.collection_select :category_id,current_user.categories,:id, :name ,{ include_blank: "選択して下さい" }, autofocus: true, autocomplete: "name",class: "custom-select form-control", id: "category-choice" %>
  </div>

  <div class="form-group mb">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "title",class: "form-control" %>
  </div>

  <ul class="button-list">
    <li>増やすボタン:</li>
    <li><button type="button" data-toggle="modal" data-target="#createQuestionModal" data-whatever="@getbootstrap" id="question-create" class="btn btn-success">問いを増やす</button></li>
    <li><%= link_to "自問自答を増やす", {controller: "article_lists", action: "plus"},{method: :get,remote: true,type: "button", class: "btn btn-success"} %></li>
  </ul>

  <ul class="button-list mb-5">
    <li>減らすボタン:</li>
    <li><button type="button" data-toggle="modal" data-target="#destroyQuestionModal" data-whatever="@getbootstrap" id="question-destroy" class="btn btn-danger">問いを減らす</button></li>
    <li><%= link_to "自問自答を減らす", {controller: "article_lists", action: "minus"},{method: :get,remote: true,type: "button", class: "btn btn-danger"} %></li>
  </ul>

  <div id="item-form">
    <div class="form-group mb">
      <li class="item-form__list" style="width: 100%">
        <h2>自問自答1</h2>
        <%= f.label :question, "問い1", class:"mt-3" %>
        <%= f.collection_select :question, current_user.article_questions,:id,:question, { include_blank: "選択して下さい" },{ name: "items[item1][]", class: "form-control question-list", id: "question-list" } %>
        
        <%= f.label :body, "内容1" %>
        <%= f.text_area :body,name: "items[item1][]", autofocus: true, autocomplete: "body",class: "form-control" %>
      </li>
    </div>
  </div>

  <div class="button text-left">
    <%= f.submit submit, class: "btn btn-primary",id: "form" %>
  </div>
<% end %>
