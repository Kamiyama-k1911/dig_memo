<div class="card" style="width: 18rem;">
  <div class="card-body">
    <div class="flex">
      <h3 class="card-title"><%= @article.title %></h5>
      <ul>
        <li>
          <%= link_to(edit_article_path(@article)) do %>
            <i class="fas fa-edit fa-2x"></i>
          <% end %>
        </li>
        <li>
          <%= link_to(article_path(@article),method: :delete, class: "destroy", data: {confirm: "投稿を削除しますか？"}) do %>
            <i class="fas fa-trash fa-2x"></i>
          <% end %>
        </li>
      </ul>
    </div>
    <ul class="article-item-list">
      <% @article.article_items.each do |article_item| %>
        <li class="article-item-list__item">
          <h5 class="card-title"><%= article_item.question_i18n %></h5>
          <p class="card-text"><%=  article_item.body %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>