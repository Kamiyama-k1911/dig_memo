<div class="card" style="width: 18rem;">
  <div class="card-body">
    <div class="flex">
      <h5 class="card-title"><%= @article.title %></h5>
      <ul>
        <li>
          <%= link_to(edit_article_path(@article)) do %>
            <i class="fas fa-edit fa-2x"></i>
          <% end %>
        </li>
        <li>
          <%= link_to(article_path(@article),method: :delete, class: "destroy", data: {confirm: "投稿を削除しますか？"}) do %>
            <i class="fas fa-trash fa-2x"></i>
          <% end %>
        </li>
      </ul>
    </div>
    <p class="card-text"><%= @article.body1 %></p>
  </div>
</div>