/*フラッシュ*/
<% if flash.now[:notice] %>
  $("#flash").html(`<p class="alert alert-success mb-0"><%= flash.now[:notice] %><button type="button" class="close" data-dismiss="alert">&times;</button></p>`)
<% elsif flash.now[:alert] %>
  $("#flash").html(`<p class="alert alert-danger mb-0"><%= flash[:alert] %><button type="button" class="close" data-dismiss="alert">&times;</button></p>`)
<% end %>